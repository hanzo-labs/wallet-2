.account
  &:before
    content: ''
    display: block
    position: fixed
    width: 100vw
    height: 4rem
    top: 0
    left:0
    background-color: $dashMenuDarkColor
    z-index: 100
    pointer-events: none

  &:after
    content: ''
    display: block
    position: fixed
    width: 100vw
    height: 8rem
    top: 4rem
    left:0
    background: linear-gradient(to bottom, rgba(19,21,30,1) 0%,rgba(19,21,30,.25) 50%,rgba(19,21,30,0) 100%)
    z-index: 10
    pointer-events: none

  padding-top: 8rem
  max-height: 100vh
  padding-bottom: 10rem
  height: 100vh
  background-color: $backgroundDarkColor
  z-index: 2
  position: relative

  .picker-header
  .picker-footer
    text-align: center

    .button
      &:first-child
        flex: 0
        border-top-right-radius: 0 !important
        border-bottom-right-radius: 0 !important
        margin-right: 0
      &:last-child
        border-top-left-radius: 0 !important
        border-bottom-left-radius: 0 !important
        margin-left: 0
        flex-grow: 1
