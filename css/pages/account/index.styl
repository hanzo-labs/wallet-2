#account-index
  .simple-balances
    .simple-balance
      flex: 0

      .simple-balance-logo
        min-width: 16px

        img
          height: 1rem
          position: relative
          top: 2px

      .columns > *
        flex: 0
        width: auto
        margin: 0

  .token-cards > *
    flex: 0
    flex-basis: 50%
    background: linear-gradient(to bottom, $tokenCardGradient1Color 0%, $tokenCardGradient2Color 100%)

    .token-symbol
      color: $textDarkColor
      background-color: $backgroundDarkColor
      padding: .5rem
      display: inline-block
      margin-bottom: .5rem

    .token-count
      margin-bottom: .5rem
      color: $ustColor

    .token-name
      padding-bottom: 2rem
      border-bottom: 1px solid $backgroundDarkColor

    .token-value
      color: $textDarkColor

