#account-index
  &:before
    content: ''
    display: block
    position: absolute
    width: 100vw
    height: 4rem
    top: 0
    left:0
    background-color: $dashMenuDarkColor
    z-index: 100
    pointer-events: none

  &:after
    content: ''
    display: block
    position: absolute
    width: 100vw
    height: 8rem
    top: 4rem
    left:0
    background: linear-gradient(to bottom, rgba(19,21,30,1) 0%,rgba(19,21,30,.25) 50%,rgba(19,21,30,0) 100%)
    z-index: 10
    pointer-events: none

  padding-top: 8rem
  max-height: 100vh
  padding-bottom: 0
  height: 100vh
  background-color: $backgroundDarkColor
  z-index: 2
  position: relative

  .simple-balances
    .simple-balance
      flex: 0

      .simple-balance-logo
        min-width: 16px

        img
          height: 1rem
          position: relative
          top: 2px

      .columns > *
        flex: 0
        width: auto
        margin: 0


