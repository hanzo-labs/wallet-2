#account-index
  &:before
    content: ''
    display: block
    position: fixed
    width: 100vw
    height: 4rem
    top: 0
    left:0
    background-color: $dashMenuDarkColor
    z-index: 100
    pointer-events: none

  &:after
    content: ''
    display: block
    position: fixed
    width: 100vw
    height: 8rem
    top: 4rem
    left:0
    background: linear-gradient(to bottom, rgba(19,21,30,1) 0%,rgba(19,21,30,.25) 50%,rgba(19,21,30,0) 100%)
    z-index: 10
    pointer-events: none

  padding-top: 8rem
  max-height: 100vh
  padding-bottom: 10rem
  height: 100vh
  background-color: $backgroundDarkColor
  z-index: 2
  position: relative

  .simple-balances
    .simple-balance
      flex: 0

      .simple-balance-logo
        min-width: 16px

        img
          height: 1rem
          position: relative
          top: 2px

      .columns > *
        flex: 0
        width: auto
        margin: 0

  .token-card
    flex: 0
    flex-basis: 50%
    background: linear-gradient(to bottom, $tokenCardGradient1Color 0%, $tokenCardGradient2Color 100%)

    .token-symbol
      color: $textDarkColor
      background-color: $backgroundDarkColor
      padding: .5rem
      display: inline-block
      margin-bottom: .5rem

    .token-count
      margin-bottom: .5rem
      color: $ustColor

    .token-name
      padding-bottom: 2rem
      border-bottom: 1px solid $backgroundDarkColor

    .token-value
      color: $textDarkColor

