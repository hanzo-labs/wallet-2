@require 'mixins'

.table
  display: table
  width: 100%
  padding: 0
  background-color: $white
  border-radius: $mBorderRadius
  mShadowed(1.5, $mDropShadowCardColor)

// borders
.table-header
.table-row
  & > *
    border-bottom: 1px solid rgba(0,0,0,0.12)

  &:last-child
    & > *
      border-bottom: 0

.table-header
  display: table-header-group
  background-color: $mPrimaryColor
  color: $white

  & > *
    display: table-cell
    vertical-align: middle
    cursor: default
    border: 0
    margin: 0
    padding: $mSpacing * 1.5 ($mSpacing / 2) $mSpacing

    &:first-child
      padding-left: $mSpacing !important

    &:last-child
      padding-right: $mSpacing !important

.table-row
  display: table-row
  transition: all $mTransitionTime ease-in-out

  & > *
    display: table-cell
    vertical-align: middle
    position: relative
    padding: $mSpacing 0

    &:first-child
      padding-left: $mSpacing !important

    &:last-child
      padding-right: $mSpacing !important

// .table-row
//   cursor: pointer

.table-cell
  padding: $mSpacing * 2

.no-padding
  padding: $mSpacing * 2 0 !important
  p
    padding: 0 $mSpacing * 5
